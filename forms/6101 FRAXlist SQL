SELECT DISTINCT s_FraXStraightYes.RequestID, s_FraXStraightYes.Disorder, s_FraXStraightYes.TestClass, s_FraXStraightYes.SpecimenNo, s_FraXStraightYes.DateRequested, s_FraXStraightYes.DNANo, [dbo_PatientTable].[Lastname] & " " & [dbo_PatientTable].[Firstname] AS Name, dbo_PatientTable.PatientTrustID AS PatientID, dbo_PatientTable.LastName, dbo_PatientTable.FirstName, dbo_PatientTable.DoB, Left([dbo_Gender].[Gender],1) AS Sex, dbo_PatientTable.CreatedDate, dbo_PatientTable.CreatedByID AS CreatedBy, Status.Status AS [In Moka], Patients.InternalPatientID AS IPID, Patients.s_StatusOverall, [s_FraXStraightYes].[Disorder] & " " & [s_FraXStraightYes].[TestClass] AS TestName, uFraXRequest.StatusID, "S" AS SpecimenType, DateDiff("yyyy",[DOB],Now())+Int(Format(Now(),"mmdd")<Format([DOB],"mmdd")) AS Age
FROM (((s_FraXStraightYes INNER JOIN (dbo_PatientTable INNER JOIN dbo_SpecimenTable ON dbo_PatientTable.PatientID = dbo_SpecimenTable.PatientID) ON s_FraXStraightYes.SpecimenNo = dbo_SpecimenTable.SpecimenTrustID) LEFT JOIN uFraXRequest ON dbo_SpecimenTable.SpecimenTrustID = uFraXRequest.DNASpecimenNo) LEFT JOIN (Patients LEFT JOIN Status ON Patients.s_StatusOverall = Status.StatusID) ON dbo_PatientTable.PatientTrustID = Patients.PatientID) LEFT JOIN dbo_Gender ON dbo_PatientTable.GenderID = dbo_Gender.GenderID
WHERE (((s_FraXStraightYes.Disorder) Like "Fragile X*") AND ((uFraXRequest.StatusID) Is Null Or (uFraXRequest.StatusID)=2))
ORDER BY s_FraXStraightYes.DateRequested;
